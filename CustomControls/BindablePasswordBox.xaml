                               BorderThickness="0,0,0,2"
                               VerticalContentAlignment="Center"
                               Padding="28,0,0,0">
            <PasswordBox.Background>
                <ImageBrush ImageSource="C:\Users\mabe0\source\repos\OptiCare\Images\password2.png"
                                        Stretch="Uniform"
